<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeMargins">
        <item name="android:layout_marginTop">@dimen/HomeMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/HomeMarginBottom</item>
        <item name="android:layout_marginStart">@dimen/HomeMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/HomeMarginEnd</item>
    </style>
</resources>